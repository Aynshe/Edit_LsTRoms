<Window x:Class="WpfApp1.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un jeu" Height="270" Width="380"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Système :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
        <ComboBox Name="systemComboBox" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="360"/>
        <Label Content="Nouveau système :" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" />
        <TextBox Name="newSystemTextBox" HorizontalAlignment="Left" Height="23" Margin="10,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="360"/>
        <Label Content="Catégorie :" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" />
        <ComboBox Name="categoryComboBox" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top" Width="360"/>
        <Label Content="Nouvelle catégorie :" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" />
        <TextBox Name="newCategoryTextBox" HorizontalAlignment="Left" Height="23" Margin="10,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="360"/>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="OkButton_Click"/>
    </Grid>
</Window>
