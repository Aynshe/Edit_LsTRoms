<Window x:Class="Edit_LsTRoms.EditAhk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Edit_LsTRoms"
        mc:Ignorable="d"
        Title="AutoHotkey Editor" Height="1000" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="editorTextBox" Grid.Row="0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Zoom In" Margin="5" Click="ZoomInButton_Click"/>
            <Button Content="Zoom Out" Margin="5" Click="ZoomOutButton_Click"/>
            <Button Content="Save" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Delete" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
